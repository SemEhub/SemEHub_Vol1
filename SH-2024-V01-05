#In 3D 

import numpy as np
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D

# Constants 
k = 8.617e-5  # Boltzmann constant (eV/K)
h = 4.135e-15  # Planck's constant in (eV*s)
m_e = 9.109e-31  # Mass of an electron (kg)

# Temperature and effective mass ranges
T_values = np.linspace(200, 800, 100)  # Temperature range from 200 K to 800 K
mn_values = np.linspace(0.5, 1.5, 100)  # Effective mass of holes (in units of electron mass)
T, m_n = np.meshgrid(T_values, mn_values)

# We use h-bar = h / (2 * pi) and apply correct scaling
h_bar = h / (2 * np.pi)  # Reduced Planck's constant in eV*s
Nc = 2 * ((2 * np.pi * m_n * m_e * k * T) / (h_bar ** 2)) ** (3 / 2)
Nc = Nc * 1e19

# Plotting the results
fig = plt.figure(figsize=(12, 8))
ax = fig.add_subplot(111, projection='3d')

# Plot surface
surf = ax.plot_surface(T, m_n, Nv, cmap='viridis', edgecolor='none')
ax.set_xlabel("Temperature (K)")
ax.set_ylabel("Effective Mass of Electrons $m_n^* / m_e$")
ax.set_zlabel("Effective Density of States $N_c$ (cm⁻³)")
ax.set_title("Effective Density of States $N_c$ vs Temperature and Effective Mass of Electrons")
fig.colorbar(surf, ax=ax, label="$N_c$ (cm⁻³)", shrink=0.5, aspect=10)
plt.show()

#N_v vs m_p (T=300K) 

import numpy as np
import matplotlib.pyplot as plt

# Constants 
k = 8.617e-5  # Boltzmann constant in eV/K
h = 4.135e-15  # Planck's constant in eV·s
m_e = 9.109e-31  # Mass of an electron in kg

# Set temperature to a constant value of 300K
T = 300  # Temperature in Kelvin

# Define the range for effective mass of holes (in units of electron mass)
mn_values = np.linspace(0.5, 1.5, 100)  # Effective mass of holes as a fraction of electron mass

# Calculate Nv using the given formula for each value of mp
h_bar = h / (2 * np.pi)  # Reduced Planck's constant in eV·s

# Effective density of states Nv in cm^-3
Nc = 2 * ((2 * np.pi * mn_values * m_e * k * T) / (h_bar ** 2)) ** (3 / 2)

# Convert from m^-3 to cm^-3
Nc = Nc * 1e19  # Convert Nv to cm^-3 for the final values

# Plot Nv vs mp
plt.figure(figsize=(10, 6))
plt.plot(mn_values, Nc, color='b', label=r'$N_v$ at $T=300K$')
plt.xlabel("Effective Mass of Electrons $m_n^* / m_e$")
plt.ylabel("Effective Density of States $N_v$ (cm⁻³)")
plt.title("Effective Density of States $N_v$ vs Effective Mass of Electrons $m_n^*$ at T = 300K")
plt.legend()
plt.grid(True)
plt.show()



